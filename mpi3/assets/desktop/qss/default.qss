!NAME=Default

!THEME=BEGIN


// PADDING - TOPpx RIGHTpx BOTTOMpx LEFTpx


QWidget {
    font-family: "Helvetica";
    font-size: 12px;
}


// --------------------------------------------------
// * MainMenuBar *
// --------------------------------------------------
QMenuBar#MainMenuBar {
    background-color: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #828282, stop:1 #565656);
    color: #FFFFFF;
    border-bottom: 1px solid #000000;
}

QMenuBar#MainMenuBar::item {
    padding: 3px 8px 3px 2px;
    background: transparent;
    border-radius: 0px;
}

QMenuBar#MainMenuBar::item:selected {
    background: #999999;
}

QMenuBar#MainMenuBar::item:pressed {
    background: #888888;
}


// --------------------------------------------------
// * QMenu *
// --------------------------------------------------
QMenu {
    background-color: #777777;
    border: 1px solid #000000;
    color: #FFFFFF;
    margin: 0px;
}

QMenu::item {
    padding: 2px 25px 2px 20px;
    border: 1px solid transparent;
}

QMenu::item:selected {
    background-color: #FFFFFF;
    color: #777777;
}

QMenu::item:disabled {
    background-color: #777777;
    color: #BCBCBC;
}

QMenu::icon:checked {
    background: #999999;
    border: 1px inset #000000;
    position: absolute;
    top: 1px;
    right: 1px;
    bottom: 1px;
    left: 1px;
}

QMenu::separator {
    height: 1px;
    background: #999999;
    margin-left: 0px;
    margin-right: 0px;
}

QMenu::indicator {
    width: 13px;
    height: 13px;
}


// --------------------------------------------------
// * PanelPlayback *
// --------------------------------------------------
QWidget#PanelPlayback {
    background-color: #BABABA;
    border-bottom: 1px solid #000000;
}


// --------------------------------------------------
// * PlaybackControl *
// --------------------------------------------------
QWidget#PlaybackControl {
    background-color: #FFFFFF;
    border-bottom: 1px solid #000000;
}


// --------------------------------------------------
// * ButtonPrev *
// --------------------------------------------------
QWidget#ButtonPrev {
    background-color: qlineargradient(x1: 1, y1: 0, x2: 0, y2: 0, stop: 0 #F6F7FA, stop: 1 #DADBDE);
}

QWidget#ButtonPrev:pressed {
    background-color: qlineargradient(x1: 1, y1: 0, x2: 0, y2: 0, stop: 0 #E2E2E2, stop: 1 #CCCCCC);
}

QWidget#ButtonPrev:flat {
    border: none;
}


// --------------------------------------------------
// * ButtonNext *
// --------------------------------------------------
QWidget#ButtonNext {
    background-color: qlineargradient(x1: 1, y1: 0, x2: 0, y2: 0, stop: 0 #F6F7FA, stop: 1 #DADBDE);
}

QWidget#ButtonNext:pressed {
    background-color: qlineargradient(x1: 1, y1: 0, x2: 0, y2: 0, stop: 0 #E2E2E2, stop: 1 #CCCCCC);
}

QWidget#ButtonNext:flat {
    border: none;
}


// --------------------------------------------------
// * ButtonPlay *
// --------------------------------------------------
QWidget#ButtonPlay {
    background-color: #FFFFFF;
}

QWidget#ButtonPlay:pressed {
    background-color: #FFFFFF;
}

QWidget#ButtonPlay:flat {
    border: none;
}


// --------------------------------------------------
// * SliderPosition *
// --------------------------------------------------
QWidget#SliderPosition {
    border: 1px solid #999999;
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #B1B1B1, stop:1 #C4C4C4);
    margin: 2px 0;
}

QWidget#SliderPosition::handle:horizontal {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1, stop:0 #828282, stop:1 #565656);
    border: 1px solid #5c5c5c;
    width: 18px;
    margin: -2px 0;
    border-radius: 3px;
}

QWidget#SliderPosition::groove:horizontal {
     background: red;
     position: absolute;
     left: 4px; right: 4px;
 }

 QWidget#SliderPosition::add-page:horizontal {
     background: white;
 }

 QWidget#SliderPosition::sub-page:horizontal {
     background: pink;
 }


// --------------------------------------------------
// * PanelViews *
// --------------------------------------------------
QWidget#PanelViews {
    background-color: #A3A3A3;
    border-top: 0px;
    border-left: 0px;
    border-right: 0px;
    border-bottom: 0px;
}


// --------------------------------------------------
// * PanelViewsButton *
// --------------------------------------------------
QWidget#PanelViewsButton {
    background-color: #A3A3A3;
    border-top: 0px;
    border-left: 0px;
    border-right: 0px;
    border-bottom: 0px;
    color: #FFFFFF;
    text-align: left;
    font: 14px normal;
    padding: 2px 2px 2px 2px;
}

QWidget#PanelViewsButton::indicator {
    width: 0px;
    height: 0px;
}

QWidget#PanelViewsButton:hover {
    background-color: #777777;
}

QWidget#PanelViewsButton:pushed {
    background-color: #FFFFFF;
}

QWidget#PanelViewsButton:checked {
    font: 14px bold;
    background: #FFFFFF;
    color: #000000;
    border: 0px;
}

// --------------------------------------------------
// * PanelViewsLabel *
// --------------------------------------------------
QWidget#PanelViewsLabel {
    background-color: #A3A3A3;
    border-top: 1px solid #FFFFFF;
    border-left: 0px;
    border-right: 0px;
    border-bottom: 0px;
    color: #FFFFFF;
    text-align: left;
    font: 14px normal;
    padding: 2px 2px 2px 2px;
}

// --------------------------------------------------
// * PanelTrees *
// --------------------------------------------------
QWidget#PanelTrees {
    background-color: #FFFFFF;
    border-top: 0px;
    border-left: 1px solid #000000;
    border-right: 0px;
    border-bottom: 1px solid #000000;
}

QWidget#PanelTreesTitle {
    font-size: 20px;
}


// --------------------------------------------------
// * ContainersTreeview *
// --------------------------------------------------
QWidget#ContainersTreeview {
    background-color: #A3A3A3;
    border-top: 0px;
    border-left: 0px;
    border-right: 0px;
    border-bottom: 0px;
    color: #FFFFFF;
    font: 14px normal;
    selection-color: #FFFFFF;
    selection-background-color: #777777;
    show-decoration-selected: 1;
}

QWidget#ContainersTreeview::item:hover {
    background: #777777;
    border: 0px;
}

QWidget#ContainersTreeview::item:selected  {
    background: #FFFFFF;
    color: #000000;
    border-image: none;
}

QWidget#ContainersTreeview::branch:selected {
    background: #FFFFFF;
    color: #000000;
    border-image: none;
}

QWidget#ContainersTreeview::branch:has-siblings:!adjoins-item {
    border-image: url(:/icons/treeview/branch_vline.png) 0;
}

QWidget#ContainersTreeview::branch:has-siblings:adjoins-item {
    border-image: url(:/icons/treeview/branch_more.png) 0;
}

QWidget#ContainersTreeview::branch:!has-children:!has-siblings:adjoins-item {
    border-image: url(:/icons/treeview/branch_end.png) 0;
}

QWidget#ContainersTreeview::branch:has-children:!has-siblings:closed {
    border-image: none;
    image: url(:/icons/treeview/folder_closed.png);
}

QWidget#ContainersTreeview::branch:closed:has-children:has-siblings {
    border-image: none;
    image: url(:/icons/treeview/folder_closed.png);
}

QWidget#ContainersTreeview::branch:open:has-children:!has-siblings{
    border-image: none;
    image: url(:/icons/treeview/folder_open.png);
}

QWidget#ContainersTreeview::branch:open:has-children:has-siblings  {
    border-image: none;
    image: url(:/icons/treeview/folder_open.png);
}


// --------------------------------------------------
// * SonglistTreeview *
// --------------------------------------------------
QWidget#SonglistTreeview {
    background-color: #F2F2F2;
    color: #000000;
    border-top: 1px solid #000000;
    border-left: 1px solid #000000;
    border-right: 0px;
    border-bottom: 0px;
    font: 12px normal;
    show-decoration-selected: 1;
    alternate-background-color: #F9F9F9;
    paint-alternating-row-colors-for-empty-area: 1;
}


